// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                String              @id @default(uuid())
  clientName        String              @unique
  logoUrl           String              
  description       String
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  reconciliations   Reconciliation[]    @relation("ClientToReconciliation")
  operations        Operation[]         @relation("ClientToOperation")
  clientapis        ClientAPI[]         @relation("ClientToClientAPI")
}

model Reconciliation {
  id                      String            @id @default(uuid())
  clientId                String
  transactionReference    String            @unique
  amount                  String
  customerAccountNumber   String
  date                    String
  reversalReference       String
  interestReference       String
  letterNo                String
  operation               String            
  status                  String
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  client                  Client            @relation("ClientToReconciliation", fields: [clientId], references: [id])

  @@index([clientId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Operation {
  id                      String            @id @default(uuid())
  clientId                String
  operation               String            @unique
  bodyData                Json
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  client                  Client            @relation("ClientToOperation", fields: [clientId], references: [id])
  
  @@index([clientId])
}

model ClientAPI {
  id                      String            @id @default(uuid())
  clientId                String
  domain                  String            
  port                    String            
  endpoint                String            
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  client                  Client            @relation("ClientToClientAPI", fields: [clientId], references: [id])
  
  @@index([clientId])
}